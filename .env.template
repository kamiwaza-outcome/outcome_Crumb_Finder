# ==============================================================================
# RFP Discovery System - Environment Variables Template
# ==============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ==============================================================================
# REQUIRED API KEYS
# ==============================================================================

# SAM.gov API Key (Required)
# Get your API key from: https://sam.gov/apis
SAM_API_KEY=

# OpenAI API Key (Required)
# Get your API key from: https://platform.openai.com/api-keys
# Note: GPT-5 access is required for optimal performance
OPENAI_API_KEY=

# ==============================================================================
# GOOGLE CLOUD CONFIGURATION
# ==============================================================================

# Path to Google Service Account credentials JSON file (Required)
# Instructions:
# 1. Create a Google Cloud Project
# 2. Enable Google Sheets API and Google Drive API
# 3. Create a service account and download the JSON key
GOOGLE_SHEETS_CREDS_PATH=

# Google Drive Folder ID for storing RFP documents (Required)
# How to find: Right-click folder in Google Drive > Get link > Extract ID from URL
GOOGLE_DRIVE_FOLDER_ID=

# Optional: Subfolder for organizing daily RFPs
DAILY_RFPS_FOLDER_ID=

# ==============================================================================
# GOOGLE SHEETS CONFIGURATION
# ==============================================================================
# Create these sheets manually or let the setup script create them
# Share each sheet with your service account email

# Main qualified opportunities sheet (Required)
SPREADSHEET_ID=

# Maybe/borderline opportunities sheet (Required)
MAYBE_SPREADSHEET_ID=

# Rejected opportunities audit trail (Required)
REJECTED_SPREADSHEET_ID=

# Spam/irrelevant opportunities (Required)
SPAM_SPREADSHEET_ID=

# Archive for expired RFPs (Optional)
GRAVEYARD_SPREADSHEET_ID=

# Archive for completed/won RFPs (Optional)
BANK_SPREADSHEET_ID=

# Sheet tab name (Optional - defaults to 'RFP Opportunities')
SHEET_NAME=RFP Opportunities

# ==============================================================================
# SLACK INTEGRATION (Optional)
# ==============================================================================

# Main channel webhook for qualified opportunities
# How to get: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# Separate channel for rejected/expired RFPs (Optional)
SLACK_OBITUARY_WEBHOOK_URL=

# ==============================================================================
# COMPANY CONFIGURATION
# ==============================================================================

# Path to company configuration JSON file (Required)
# This file contains your company profile, capabilities, and scoring criteria
COMPANY_CONFIG_PATH=./company_config.json

# ==============================================================================
# PROCESSING CONFIGURATION (Optional - has defaults)
# ==============================================================================

# Maximum number of RFPs to process per run (default: 20000)
# MAX_DAILY_RFPS=20000

# GPT-5 concurrent request limit (default: 130)
# MAX_CONCURRENT_DEEP=130

# GPT-5-mini concurrent request limit (default: 400)
# MAX_CONCURRENT_MINI=400

# ==============================================================================
# GITHUB ACTIONS CONFIGURATION (For automated runs)
# ==============================================================================
# These should be set as GitHub Secrets, not in .env file

# Schedule timezone (default: America/New_York)
# TIMEZONE=America/New_York

# Daily run time in 24-hour format (default: 05:00)
# RUN_TIME=05:00

# ==============================================================================
# DEBUGGING AND DEVELOPMENT (Optional)
# ==============================================================================

# Enable debug logging (true/false)
# DEBUG=false

# Dry run mode - process but don't save (true/false)
# DRY_RUN=false

# Limit processing for testing (number or empty for no limit)
# TEST_LIMIT=